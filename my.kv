            text_size: self.width, None
            size_hint: 1, 1/32
            pos_hint: {"top": 0.35, "x": 0.01}
            width: self.texture_size[0]
            color: 00/256, 38/256, 61/256, 1

        Label:
            id: pad50
            halign: "left"
            font_size: root.height/32
            text: '[b]P50:[/b]'
            text_size: self.width, None
            size_hint: 1, 1/32
            pos_hint: {"top": 0.5, "x": 0.51}
            width: self.texture_size[0]
            color: 0/256, 38/256, 61/256, 1

        Label:
            id: pad90
            halign: "left"
            font_size: root.height/32
            text: '[b]P90:[/b]'
            text_size: self.width, None
            size_hint: 1, 1/32
            pos_hint: {"top": 0.45, "x": 0.51}
            width: self.texture_size[0]
            color: 0/256, 38/256, 61/256, 1

        Label:
            id: pad95
            halign: "left"
            font_size: root.height/32
            text: '[b]P95:[/b]'
            text_size: self.width, None
            size_hint: 1, 1/32
            pos_hint: {"top": 0.4, "x": 0.51}
            width: self.texture_size[0]
